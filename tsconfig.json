{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["ESNext"],
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "lib",
        "noEmit": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true
    },
    "exclude": ["node_modules", "lib"],
    "include": ["index.ts", "tests/**/*.ts", "src/**/*.ts"]
}
